<%= render 'shared/page_title', title: "Ingredienti disponibili" %>


<div align="center">
	<%= will_paginate %>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
          <li><small><%= pluralize(ing.recipes.count, "ricette") if ing.recipes %></small></li>
          <% if logged_in? && current_chef.admin? %>
          <!--Link do delete chefs-->
          <li><%= link_to "Modifica ingredienti", edit_ingredient_path(ing) %></li>
          <% end %>
				</div>
			</div>
		</ul>

	<% end %>

  <div class="col-md-4 col-md-offset-4 rangi-kijani">
  [ <%= link_to "Abandona e ritorna nella lista di ricette", recipes_path %> ]
  </div>
